
<script src="http://code.jquery.com/jquery-1.4.4.min.js" type="text/javascript"></script>

<div class="filter-box" style="height:30px;">
<h1 class="heading">Unconfirmed Entries</h1>
</div>

<% if @accommodations.size == 0 %>
<div id="no-listings-message">No unconfirmed entries</div>
<% end %>

<div class="form-top"></div>
<ul class="listing">
	
  <%= form_tag({:action => 'unconfirmed'}, {:method => 'post'}) %>
	
  <table class="unconfirmed-table">
	<tr>
		<th><input  type="checkbox" onclick="status = this.checked; $('.unconfirmed_checkbox').each(function() { this.checked = status })"/></th>
		<th>Name</th>
		<th>Email</th>
		<th>Mobile</th>
		<th>Home</th>
		<th>Address</th>
		<th>Updated</th>
		
	</tr>

  <% @accommodations.each do |accommodation| %>	
	<tr id="accommodations_<%=accommodation.id%>">
		<td><input class="unconfirmed_checkbox" type="checkbox" name="ids[]" value="<%=accommodation.id%>"/></td>
		<td><%= accommodation.name %></td>
		<td><%= accommodation.email %></td>
		<td><%= accommodation.phone_mobile %></td>
		<td><%= accommodation.phone_home %></td>
		<td><%= accommodation.restricted_address %></td>
		<td><%= accommodation.updated_at.strftime('%d/%m/%y %H:%') %></td>
	</tr>
  <% end %>
  </table>

  <input type="submit" value="Confirm selected">

  </form>

</ul>
<div class="form-bottom"></div>
